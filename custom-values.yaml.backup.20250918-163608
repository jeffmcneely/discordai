  databaseUrl: ""  # PostgreSQL connection string (optional)

# OpenAI Integration
openai:
  apiKey: ""               # Set your OpenAI API key here
  model: "gpt-5-nano"      # OpenAI model to use
  maxTokens: "1000"        # Maximum tokens per response
  temperature: "0.7"       # Response creativity (0.0-2.0)
  enabled: "true"          # Enable/disable OpenAI integration

# Rate Limiting Configuration
rateLimiting:
  messagesPerMinute: "5"    # Rate limit for messages
  tokensPerHour: "10000"    # Rate limit for tokens

# Redis Configuration
redis:
